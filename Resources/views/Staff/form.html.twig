{% trans_default_domain 'admin' %}

{{ form_start(form, { 'attr' : {'class' : 'form-stacked'}, 'multipart' : true } ) }}
<div class="panel panel-flat">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-4">
                <label>{{ "expertise.picture"|trans }}</label>
                {% if staff is defined and staff.picture is not empty %}
                    {% include 'PuzzleAdminMediaBundle:File:embbed.html.twig' with { 'type' : 'image', 'previews' : render_api_media_file(staff.picture) } %}
                {% else %}
                    {% include 'PuzzleAdminMediaBundle:File:embbed.html.twig' with { 'type' : 'image' } %}
                {% endif %}
            </div>
            <div class="col-sm-8">
                <div class="col-sm-6">
                    <div class="form-group">
                        {{ form_label(form.fullName) }}
                        {{ form_widget(form.fullName) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.position) }}
                        {{ form_widget(form.position) }}
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        {{ form_label(form.service) }}
                        {{ form_widget(form.service) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.ranking) }}
                        {{ form_widget(form.ranking) }}
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        {{ form_label(form.contacts) }}
                        {{ form_widget(form.contacts) }}
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-center">
    <a class="btn btn-default" href="{{ url('admin_expertise_staff_list') }}">
        <i class="icon-arrow-left8"></i>
        {{ 'button.back'|trans }}
    </a>
    <button class="btn btn-success">
        {{ staff is defined ? 'button.update'|trans : 'button.add'|trans }}
        <i class="icon-checkmark2"></i>
    </button>
</div>
{{ form_end(form) }}
