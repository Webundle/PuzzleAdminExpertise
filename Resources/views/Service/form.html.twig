{% trans_default_domain 'admin' %}

{{ form_start(form, {'attr': {'class': 'form-stacked'}, 'multipart' : true}) }}
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-flat">
            <div class="panel-body">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.description) }}
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-flat">
            <div class="panel-body">
                <div class="form-group">
                    {{ form_label(form.classIcon) }}
                    {{ form_widget(form.classIcon) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.ranking) }}
                    {{ form_widget(form.ranking) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>{{ "expertise.service.picture"|trans }}</label>
            {% if service is defined and service.picture is not empty %}
                {% include 'PuzzleAdminMediaBundle:File:embbed.html.twig' with { 'type' : 'image', 'previews' : render_api_media_file(service.picture) } %}
            {% else %}
                {% include 'PuzzleAdminMediaBundle:File:embbed.html.twig' with { 'type' : 'image' } %}
            {% endif %}
        </div>
    </div>
</div>
<div class="text-center">
    <a class="btn btn-default" href="{{ url('admin_expertise_service_list') }}">
        <i class="icon-arrow-left8"></i>
        {{ 'button.back'|trans }}
    </a>
    <button class="btn btn-success">
        {{ service is defined ? 'button.update'|trans : 'button.add'|trans }}
        <i class="icon-checkmark2"></i>
    </button>
</div>
{{ form_end(form) }}
